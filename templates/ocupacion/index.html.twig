    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ocupacion in ocupacions %}
            <tr>
                <td>{{ ocupacion.id }}</td>
                <td>{{ ocupacion.descripcion }}</td>
                <td>
                    <a href="{{ path('ocupacion_show', {'id': ocupacion.id}) }}">show</a>
